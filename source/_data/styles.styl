@media screen and (min-width: 990px) {
  body {
    background-repeat: no-repeat;
    background-attachment: fixed;
    background-position: 50% 50%;
    background-size: 100% 100%;
  }

  .footer-inner {
    color: #ddd;
    text-shadow: 0px 0px 8px #00000080;
  }

  .footer-inner a {
    border: none;
    color: #fff;
    position: relative;
  }
  
  .footer-inner a:after {
    content: "";
    position: absolute;
    border-bottom: 1px #fff solid;
    left: 50%;
    bottom: -2px;
    width: 0;
    transition: .3s ease;
  }

  .footer-inner a:hover:after {
    left: 0;
    width: 100%;
  }

  .footer-inner .with-love{
    color: #ffe300;
  }
}
