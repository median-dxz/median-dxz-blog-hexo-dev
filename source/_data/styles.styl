.hito-content {
  line-height: 2em;
  font-size: 10px;
  margin: 0;
  padding: 15px 20px;
  color: rgba(255, 255, 255, 0.4);
  font-family: "Noto Serif SC";
  font-weight: 300;
  // text-align: center;
}

.hito-content:before {
  content: "『";
  margin-left: -15px;
  display: block;
  float: left;
}
.hito-content:after {
  content: "』";
  margin-right: -15px;
  display: block;
  float: right;
}

.hito-quote {
  display: block;
  padding: 0 4px;
